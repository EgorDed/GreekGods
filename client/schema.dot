// === relations.dot ===
// === Поколение Хаоса ===
Chaos -> { Gaia Tartarus Eros Nyx };

Nyx -> {Erebus,Apata, Nyx_Erebus, Nyx_Hypnosis};
Erebus -> Nyx_Erebus;

// === Боги снов ===
Nyx_Hypnosis [shape=point width=0 label=""];
Hypnosis -> Nyx_Hypnosis;
Nyx_Hypnosis -> {Morpheus, Phantasos, Phobetor};

// === Дети Нюкты и Эреба ===
Nyx_Erebus [shape=point width=0 label=""];
Nyx_Erebus -> {
    Ether, Gemera, Charon, Nemesis,
    Erida, Hypnosis, Thanatos,
    Mom, Geras, Moros
}

